<blade-blade id="blade1" class="blade-blade-element">
    <header>
        <div id="icon">@Icon</div>
        <h2 id="title">@Title</h2>
        <small id="sub-title">@SubTitle</small>
        @if (HeadderButtons == HeaderButtons.Close)
        {
            <button id="close">X</button>
        }
        else
        {
            <button id="Save"><img src="@SaveButtonPath"/>Save</button>
            <button id="close">X</button>
        }
    </header>
    <div class="blade-command-bar-element">
        @CommandBars
        @*<button slot="blade-buttons" onclick="document.getElementById('blade1').setAttribute('title', 'xyz');">➕ Add</button>*@
    </div>
    <div id="content">
        @Content
        <slot>
            Hello World
        </slot>
    </div>
</blade-blade>


@code {
    [Parameter] public string Icon { get; set; }

    [Parameter] public string IconPath { get; set; }

    [Parameter] public string Title { get; set; }

    [Parameter] public string SubTitle { get; set; }

    [Parameter] public  HeaderButtons HeadderButtons { get; set; }

    [Parameter] public RenderFragment CommandBars { get; set; }

    [Parameter] public string SaveButtonPath { get; set; }

    [Parameter] public RenderFragment Content { get; set; }

}